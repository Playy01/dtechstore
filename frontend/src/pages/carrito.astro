---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Carrito - DTech">
  <div class="container">
    <h1>Carrito de Compras</h1>
    
    <div class="cart-layout">
      <div class="cart-items" id="cartItems"></div>
      
      <div class="cart-summary">
        <h2>Resumen</h2>
        <div class="summary-row">
          <span>Subtotal:</span>
          <span id="subtotal">$0.00</span>
        </div>
        <div class="summary-row total">
          <span>Total:</span>
          <span id="total">$0.00</span>
        </div>
        <button class="checkout-btn" id="checkoutBtn">Proceder al Pago</button>
      </div>
    </div>
  </div>
</Layout>

<style>
  h1 {
    margin-bottom: 32px;
  }

  .cart-layout {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 32px;
  }

  .cart-items {
    background: var(--bg-primary);
    padding: 24px;
    border-radius: var(--radius);
  }

  .cart-summary {
    background: var(--bg-primary);
    padding: 24px;
    border-radius: var(--radius);
    height: fit-content;
    position: sticky;
    top: 100px;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16px;
    font-size: 18px;
  }

  .summary-row.total {
    font-size: 24px;
    font-weight: 700;
    padding-top: 16px;
    border-top: 2px solid var(--border);
    color: var(--primary);
  }

  .checkout-btn {
    width: 100%;
    padding: 16px;
    background: var(--primary);
    color: white;
    border-radius: var(--radius-sm);
    font-size: 18px;
    font-weight: 600;
    margin-top: 16px;
  }

  .checkout-btn:hover {
    background: var(--primary-dark);
  }
</style>

<script>
  const API_URL = 'http://localhost:8080/api';

  function loadCart() {
    const cart = JSON.parse(localStorage.getItem('cart') || '[]');
    const container = document.getElementById('cartItems');
    
    if (!container) return;

    if (cart.length === 0) {
      container.innerHTML = '<p>Tu carrito está vacío</p>';
      return;
    }

    container.innerHTML = cart.map((item: any, index: number) => `
      <div class="cart-item">
        <img src="${item.image}" alt="${item.name}">
        <div class="item-details">
          <h3>${item.name}</h3>
          <p class="item-price">$${item.price.toFixed(2)}</p>
        </div>
        <div class="item-quantity">
          <button class="qty-btn" data-index="${index}" data-action="decrease">-</button>
          <span>${item.quantity}</span>
          <button class="qty-btn" data-index="${index}" data-action="increase">+</button>
        </div>
        <button class="remove-btn" data-index="${index}">Eliminar</button>
      </div>
    `).join('');

    updateTotal(cart);
    attachEventListeners();
  }

  function updateTotal(cart: any[]) {
    const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    const subtotalEl = document.getElementById('subtotal');
    const totalEl = document.getElementById('total');
    
    if (subtotalEl) subtotalEl.textContent = `$${total.toFixed(2)}`;
    if (totalEl) totalEl.textContent = `$${total.toFixed(2)}`;
  }

  function attachEventListeners() {
    document.querySelectorAll('.qty-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const target = e.target as HTMLButtonElement;
        const index = parseInt(target.dataset.index || '0');
        const action = target.dataset.action;
        
        const cart = JSON.parse(localStorage.getItem('cart') || '[]');
        
        if (action === 'increase') {
          cart[index].quantity++;
        } else if (action === 'decrease' && cart[index].quantity > 1) {
          cart[index].quantity--;
        }
        
        localStorage.setItem('cart', JSON.stringify(cart));
        loadCart();
      });
    });

    document.querySelectorAll('.remove-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const target = e.target as HTMLButtonElement;
        const index = parseInt(target.dataset.index || '0');
        
        const cart = JSON.parse(localStorage.getItem('cart') || '[]');
        cart.splice(index, 1);
        
        localStorage.setItem('cart', JSON.stringify(cart));
        loadCart();
        window.dispatchEvent(new Event('cartUpdated'));
      });
    });
  }

  document.getElementById('checkoutBtn')?.addEventListener('click', () => {
    const token = localStorage.getItem('token');
    
    if (!token) {
      (window as any).showNotification(
        'Por favor inicia sesión para completar tu compra',
        'warning',
        'Sesión Requerida'
      );
      setTimeout(() => {
        window.location.href = '/login';
      }, 1500);
      return;
    }

    const cart = JSON.parse(localStorage.getItem('cart') || '[]');
    
    if (cart.length === 0) {
      (window as any).showNotification(
        'Agrega algunos productos antes de proceder',
        'info',
        'Carrito Vacío'
      );
      return;
    }

    // Redirigir a la página de pago
    window.location.href = '/pago';
  });

  loadCart();
</script>

<style is:global>
  .cart-item {
    display: grid;
    grid-template-columns: 100px 1fr auto auto;
    gap: 16px;
    align-items: center;
    padding: 16px;
    border-bottom: 1px solid var(--border);
  }

  .cart-item img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: var(--radius-sm);
  }

  .item-details h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  .item-price {
    font-size: 20px;
    font-weight: 700;
    color: var(--primary);
  }

  .item-quantity {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .qty-btn {
    width: 32px;
    height: 32px;
    background: var(--bg-secondary);
    border-radius: 50%;
    font-size: 18px;
  }

  .remove-btn {
    padding: 8px 16px;
    background: #ff4444;
    color: white;
    border-radius: var(--radius-sm);
  }
</style>
