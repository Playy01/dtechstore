---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Iniciar Sesión - DTech">
  <div class="container">
    <div class="auth-container">
      <div class="auth-box">
        <h1>Iniciar Sesión</h1>
        
        <form id="loginForm" aria-label="Formulario de inicio de sesión">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" autocomplete="email" required aria-required="true">
          </div>
          
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" autocomplete="current-password" required aria-required="true">
          </div>
          
          <button type="submit" class="submit-btn" aria-label="Iniciar sesión con email y contraseña">Iniciar Sesión</button>
        </form>
        
        <p class="auth-link">
          ¿No tienes cuenta? <a href="/registro">Regístrate aquí</a>
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    padding: 40px 20px;
  }

  .auth-box {
    background: var(--bg-primary);
    padding: 48px;
    border-radius: var(--radius-lg);
    width: 100%;
    max-width: 480px;
    box-shadow: 0 8px 32px var(--shadow-lg);
    animation: scaleIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--border);
  }

  h1 {
    text-align: center;
    margin-bottom: 32px;
    font-size: 36px;
    font-weight: 800;
    background: var(--bg-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .form-group {
    margin-bottom: 24px;
  }

  label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
  }

  input {
    width: 100%;
    padding: 14px 18px;
    border: 2px solid var(--border);
    border-radius: var(--radius-sm);
    font-size: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--bg-secondary);
  }

  input:focus {
    outline: none;
    border-color: var(--primary);
    background: white;
    box-shadow: 0 4px 16px var(--shadow);
    transform: translateY(-2px);
  }

  .submit-btn {
    width: 100%;
    padding: 18px;
    background: var(--bg-gradient);
    color: white;
    border-radius: var(--radius);
    font-size: 18px;
    font-weight: 700;
    margin-top: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px var(--shadow-lg);
    position: relative;
    overflow: hidden;
  }

  .submit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
  }

  .submit-btn:hover::before {
    left: 100%;
  }

  .submit-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px var(--shadow-lg);
  }

  .submit-btn:active {
    transform: translateY(-2px);
  }

  .auth-link {
    text-align: center;
    margin-top: 24px;
  }

  .auth-link a {
    color: var(--primary);
    font-weight: 600;
  }

  /* Responsive Mobile Styles */
  @media (max-width: 768px) {
    .auth-container {
      padding: 30px 16px;
      min-height: 50vh;
    }

    .auth-box {
      padding: 32px 24px;
    }

    h1 {
      font-size: 28px;
      margin-bottom: 24px;
    }

    input {
      padding: 12px 16px;
      font-size: 15px;
    }

    .submit-btn {
      padding: 16px;
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .auth-container {
      padding: 20px 12px;
    }

    .auth-box {
      padding: 24px 20px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    input {
      padding: 10px 14px;
      font-size: 14px;
    }

    .submit-btn {
      padding: 14px;
      font-size: 15px;
    }

    .auth-link {
      font-size: 14px;
      margin-top: 20px;
    }
  }
</style>

<script>
  import { login } from '../lib/auth';

  const loginForm = document.getElementById('loginForm');
  const submitBtn = loginForm?.querySelector('.submit-btn');

  loginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;

    if (!email || !password) {
      (window as any).showNotification?.(
        'Por favor completa todos los campos',
        'error',
        'Campos Requeridos'
      );
      return;
    }

    if (submitBtn) {
      (submitBtn as HTMLButtonElement).textContent = 'Iniciando sesión...';
      (submitBtn as HTMLButtonElement).disabled = true;
    }

    try {
      const result = await login(email, password);

      if (result.success && result.user) {
        (window as any).showNotification?.(
          `Bienvenido de vuelta, ${result.user.name}`,
          'success',
          '¡Sesión Iniciada!'
        );
        
        setTimeout(() => {
          window.location.href = '/';
        }, 1000);
      } else {
        throw new Error(result.error || 'Error al iniciar sesión');
      }
    } catch (error: any) {
      console.error('Error en login:', error);
      (window as any).showNotification?.(
        error.message || 'Email o contraseña incorrectos',
        'error',
        'Error al Iniciar Sesión'
      );
      
      if (submitBtn) {
        (submitBtn as HTMLButtonElement).textContent = 'Iniciar Sesión';
        (submitBtn as HTMLButtonElement).disabled = false;
      }
    }
  });
</script>
