---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mi Perfil - DTech">
  <div class="container">
    <div class="profile-layout">
      <aside class="profile-sidebar">
        <h2>Mi Cuenta</h2>
        <nav class="profile-nav">
          <a href="/perfil" class="nav-link active">Perfil</a>
          <a href="/ordenes" class="nav-link">Mis Órdenes</a>
          <button id="logoutBtn" class="nav-link logout">Cerrar Sesión</button>
        </nav>
      </aside>

      <div class="profile-content">
        <h1>Mi Perfil</h1>
        <div class="profile-info" id="profileInfo">
          <p>Cargando...</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .profile-layout {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 32px;
  }

  .profile-sidebar {
    background: var(--bg-primary);
    padding: 24px;
    border-radius: var(--radius);
    height: fit-content;
  }

  .profile-nav {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 16px;
  }

  .nav-link {
    padding: 12px;
    border-radius: var(--radius-sm);
    transition: background 0.2s;
    text-align: left;
    width: 100%;
  }

  .nav-link:hover {
    background: var(--bg-secondary);
  }

  .nav-link.active {
    background: var(--primary);
    color: white;
  }

  .nav-link.logout {
    color: #dc3545;
    margin-top: 16px;
  }

  .profile-content {
    background: var(--bg-primary);
    padding: 32px;
    border-radius: var(--radius);
  }

  .profile-info {
    margin-top: 24px;
  }

  .info-row {
    padding: 16px 0;
    border-bottom: 1px solid var(--border);
  }

  .info-label {
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 4px;
  }

  /* Responsive Mobile Styles */
  @media (max-width: 768px) {
    .profile-layout {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .profile-sidebar {
      padding: 20px;
    }

    .profile-content {
      padding: 24px;
    }

    h1 {
      font-size: 28px;
    }
  }

  @media (max-width: 480px) {
    .profile-sidebar {
      padding: 16px;
    }

    .profile-content {
      padding: 20px;
    }

    h1 {
      font-size: 24px;
    }

    .info-row {
      padding: 12px 0;
    }
  }
</style>

<script>
  function loadProfile() {
    const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
    const userStr = localStorage.getItem('user');
    
    if (!isLoggedIn || !userStr) {
      window.location.href = '/login';
      return;
    }

    try {
      const user = JSON.parse(userStr);
      displayProfile(user);
    } catch (error) {
      console.error('Error:', error);
      localStorage.removeItem('isLoggedIn');
      localStorage.removeItem('user');
      window.location.href = '/login';
    }
  }

  function displayProfile(user) {
    const container = document.getElementById('profileInfo');
    if (!container) return;

    container.innerHTML = `
      <div class="info-row">
        <div class="info-label">Nombre</div>
        <div>${user.name}</div>
      </div>
      <div class="info-row">
        <div class="info-label">Email</div>
        <div>${user.email}</div>
      </div>
      <div class="info-row">
        <div class="info-label">Rol</div>
        <div>${user.role === 'admin' ? 'Administrador' : 'Usuario'}</div>
      </div>
      <div class="info-row">
        <div class="info-label">ID de Usuario</div>
        <div>#${user.id}</div>
      </div>
    `;
  }

  document.getElementById('logoutBtn')?.addEventListener('click', () => {
    localStorage.removeItem('isLoggedIn');
    localStorage.removeItem('user');
    localStorage.removeItem('cart');
    window.showNotification?.(
      'Has cerrado sesión correctamente',
      'info',
      'Sesión Cerrada'
    );
    setTimeout(() => {
      window.location.href = '/';
    }, 1500);
  });

  loadProfile();
</script>
