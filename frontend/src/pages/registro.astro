---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Registro - DTech">
  <div class="container">
    <div class="auth-container">
      <div class="auth-box">
        <h1>Crear Cuenta</h1>
        
        <form id="registerForm">
          <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" id="name" name="name" autocomplete="name" required aria-required="true">
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" autocomplete="email" required aria-required="true">
          </div>
          
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" autocomplete="new-password" required minlength="6" aria-required="true">
          </div>
          
          <button type="submit" class="submit-btn">Registrarse</button>
        </form>
        
        <p class="auth-link">
          ¿Ya tienes cuenta? <a href="/login">Inicia sesión aquí</a>
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    padding: 40px 20px;
  }

  .auth-box {
    background: var(--bg-primary);
    padding: 48px;
    border-radius: var(--radius-lg);
    width: 100%;
    max-width: 480px;
    box-shadow: 0 8px 32px var(--shadow-lg);
    animation: scaleIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--border);
  }

  h1 {
    text-align: center;
    margin-bottom: 32px;
    font-size: 36px;
    font-weight: 800;
    background: var(--bg-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .form-group {
    margin-bottom: 24px;
  }

  label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
  }

  input {
    width: 100%;
    padding: 14px 18px;
    border: 2px solid var(--border);
    border-radius: var(--radius-sm);
    font-size: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--bg-secondary);
  }

  input:focus {
    outline: none;
    border-color: var(--primary);
    background: white;
    box-shadow: 0 4px 16px var(--shadow);
    transform: translateY(-2px);
  }

  .submit-btn {
    width: 100%;
    padding: 18px;
    background: var(--bg-gradient);
    color: white;
    border-radius: var(--radius);
    font-size: 18px;
    font-weight: 700;
    margin-top: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px var(--shadow-lg);
    position: relative;
    overflow: hidden;
  }

  .submit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
  }

  .submit-btn:hover::before {
    left: 100%;
  }

  .submit-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px var(--shadow-lg);
  }

  .submit-btn:active {
    transform: translateY(-2px);
  }

  .auth-link {
    text-align: center;
    margin-top: 24px;
  }

  .auth-link a {
    color: var(--primary);
    font-weight: 600;
  }

  /* Responsive Mobile Styles */
  @media (max-width: 768px) {
    .auth-container {
      padding: 30px 16px;
      min-height: 50vh;
    }

    .auth-box {
      padding: 32px 24px;
    }

    h1 {
      font-size: 28px;
      margin-bottom: 24px;
    }

    input {
      padding: 12px 16px;
      font-size: 15px;
    }

    .submit-btn {
      padding: 16px;
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .auth-container {
      padding: 20px 12px;
    }

    .auth-box {
      padding: 24px 20px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    input {
      padding: 10px 14px;
      font-size: 14px;
    }

    .submit-btn {
      padding: 14px;
      font-size: 15px;
    }

    .auth-link {
      font-size: 14px;
      margin-top: 20px;
    }
  }
</style>

<script type="module">
  import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';
  
  const supabaseUrl = 'https://szfamthbjrsqctzgokx.supabase.co';
  const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InN6ZmFtdGhianJzcWN0emdva3giLCJyb2xlIjoiYW5vbiIsImlhdCI6MTczMjkyNzU3NCwiZXhwIjoyMDQ4NTAzNTc0fQ.Ej3haz4QlBUcrN4bfDLAKVQ_B8k3pp04sb_pub813wha1e_E3haz4QlBUcrN4bfDLAKVQ_B8k3pp04';
  
  const supabase = createClient(supabaseUrl, supabaseKey);

  const registerForm = document.getElementById('registerForm');
  const submitBtn = registerForm?.querySelector('.submit-btn');

  registerForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const name = (document.getElementById('name') as HTMLInputElement).value;
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;

    if (password.length < 6) {
      (window as any).showNotification?.(
        'La contraseña debe tener al menos 6 caracteres',
        'error',
        'Contraseña Inválida'
      );
      return;
    }

    if (submitBtn) {
      submitBtn.textContent = 'Creando cuenta...';
      submitBtn.disabled = true;
    }

    try {
      // Registrar en Supabase Auth
      const { data: authData, error: authError } = await supabase.auth.signUp({
        email,
        password,
        options: {
          data: {
            name: name
          }
        }
      });

      if (authError) {
        console.error('Auth error:', authError);
        throw authError;
      }

      // Crear registro en tabla users
      if (authData.user) {
        const { error: userError } = await supabase
          .from('users')
          .insert([{
            email,
            name,
            password: '', // Supabase Auth maneja las contraseñas
            role: 'user'
          }]);

        if (userError) {
          console.error('User table error:', userError);
          // No lanzar error si ya existe el usuario en la tabla
          if (!userError.message.includes('duplicate')) {
            throw userError;
          }
        }
      }

      (window as any).showNotification?.(
        'Tu cuenta ha sido creada exitosamente. Por favor inicia sesión.',
        'success',
        '¡Registro Exitoso!'
      );
      
      setTimeout(() => {
        window.location.href = '/login';
      }, 1500);
    } catch (error: any) {
      console.error('Error en registro:', error);
      let errorMessage = 'No se pudo completar el registro';
      
      if (error.message.includes('already registered')) {
        errorMessage = 'Este email ya está registrado';
      } else if (error.message.includes('invalid email')) {
        errorMessage = 'Email inválido';
      } else if (error.message) {
        errorMessage = error.message;
      }
      
      (window as any).showNotification?.(
        errorMessage,
        'error',
        'Error al Registrarse'
      );
      
      if (submitBtn) {
        submitBtn.textContent = 'Registrarse';
        submitBtn.disabled = false;
      }
    }
  });
</script>
