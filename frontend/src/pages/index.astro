    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 16px 48px var(--shadow-lg);
    border-color: var(--primary);
  }

  .product-card img {
    width: 100%;
    height: 240px;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover img {
    transform: scale(1.1);
  }

  .product-card h3 {
    padding: 16px;
