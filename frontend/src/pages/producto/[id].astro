</style>

<script type="module">
  import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';
  
  const supabase = createClient(
    'https://szfwntkbjrspcptzgoks.supabase.co',
    'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InN6ZndudGtianJzcGNwdHpnb2tzIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQ1MzcxODEsImV4cCI6MjA4MDExMzE4MX0.RHng44u3pPpUZwlb-W1KvoyCi7RTVNtmw7S7LjgG0G0'
  );

  let quantity = 1;
  let currentProduct = null;

  async function loadProduct() {
    const pathParts = window.location.pathname.split('/');
    const productId = pathParts[pathParts.length - 1];

    try {
      const { data: product, error } = await supabase
        .from('products')
        .select('*')
        .eq('id', productId)
        .single();

      if (error) throw error;
      
      currentProduct = product;
      displayProduct(product);
    } catch (error) {
      console.error('Error:', error);
      document.getElementById('productContent').innerHTML = 
        '<p style="text-align: center; padding: 80px;">Producto no encontrado</p>';
    }
  }

  function displayProduct(product) {
    const container = document.getElementById('productContent');
    const breadcrumbName = document.getElementById('breadcrumbName');
    
    if (breadcrumbName) breadcrumbName.textContent = product.name;

    const stockClass = product.stock > 10 ? 'available' : product.stock > 0 ? 'low' : 'out';
    const stockText = product.stock > 10 ? 'âœ“ Disponible' : product.stock > 0 ? `âš  Solo ${product.stock}` : 'âœ— Agotado';

    container.innerHTML = `
      <div class="product-layout">
        <div class="image-section">
          <div class="product-image-container">
            <div class="category-badge">${product.category}</div>
            <img src="${product.image_url}" alt="${product.name}" class="product-image">
          </div>
        </div>

        <div class="info-section">
          <h1 class="product-title">${product.name}</h1>

          <div class="price-stock-row">
            <div class="product-price">$${product.price.toFixed(2)}</div>
            <div class="stock-badge ${stockClass}">${stockText}</div>
          </div>

          <div class="product-description">${product.description}</div>

          <div class="info-grid">
            <div class="info-card">
              <div class="info-label">CategorÃ­a</div>
              <div class="info-value">${product.category}</div>
            </div>
            <div class="info-card">
              <div class="info-label">Stock</div>
              <div class="info-value">${product.stock} unidades</div>
            </div>
          </div>

          ${product.stock > 0 ? `
            <div class="purchase-box">
              <label class="quantity-label">Cantidad</label>
              <div class="quantity-controls">
                <button class="qty-btn" id="decreaseQty">âˆ’</button>
                <span class="qty-display" id="qtyDisplay">1</span>
                <button class="qty-btn" id="increaseQty">+</button>
              </div>

              <div class="action-buttons">
                <button class="btn btn-primary" id="addToCartBtn">
                  ðŸ›’ Agregar al Carrito
                </button>
                <button class="btn btn-secondary" id="buyNowBtn">
                  â†’ Comprar Ahora
                </button>
              </div>
            </div>
          ` : '<p style="text-align: center; padding: 40px; color: var(--text-secondary);">Producto agotado</p>'}
        </div>
      </div>
    `;

    if (product.stock > 0) {
      setupControls(product);
    }
  }

  function setupControls(product) {
    document.getElementById('decreaseQty')?.addEventListener('click', () => {
      if (quantity > 1) {
        quantity--;
        document.getElementById('qtyDisplay').textContent = quantity;
      }
    });

    document.getElementById('increaseQty')?.addEventListener('click', () => {
      if (quantity < product.stock) {
        quantity++;
        document.getElementById('qtyDisplay').textContent = quantity;
      }
    });

    document.getElementById('addToCartBtn')?.addEventListener('click', () => {
      if (localStorage.getItem('isLoggedIn') !== 'true') {
        alert('Inicia sesiÃ³n para agregar al carrito');
        window.location.href = '/login';
        return;
      }

      const cart = JSON.parse(localStorage.getItem('cart') || '[]');
      const existing = cart.find(item => item.id === product.id.toString());
      
      if (existing) {
        existing.quantity += quantity;
      } else {
        cart.push({
          id: product.id.toString(),
          name: product.name,
          price: product.price,
          image: product.image_url,
          quantity: quantity
        });
      }

      localStorage.setItem('cart', JSON.stringify(cart));
      window.dispatchEvent(new Event('cartUpdated'));
      alert(`âœ“ ${quantity} producto(s) agregado(s)`);
    });

    document.getElementById('buyNowBtn')?.addEventListener('click', () => {
      if (localStorage.getItem('isLoggedIn') !== 'true') {
        alert('Inicia sesiÃ³n para comprar');
        window.location.href = '/login';
        return;
      }

      const cart = JSON.parse(localStorage.getItem('cart') || '[]');
      const existing = cart.find(item => item.id === product.id.toString());
      
      if (existing) {
        existing.quantity += quantity;
      } else {
        cart.push({
          id: product.id.toString(),
          name: product.name,
          price: product.price,
          image: product.image_url,
          quantity: quantity
        });
      }

      localStorage.setItem('cart', JSON.stringify(cart));
      window.location.href = '/carrito';
    });
  }

  loadProduct();
</script>
