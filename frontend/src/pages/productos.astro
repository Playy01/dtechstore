---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Productos - BananaTech">
  <div class="container">
    <div class="products-layout">
      <aside class="sidebar">
        <h3>Categorías</h3>
        <div id="categoryFilters"></div>
      </aside>

      <div class="products-content">
        <div class="products-header">
          <h1>Productos</h1>
          <select id="sortSelect" class="sort-select">
            <option value="">Ordenar por</option>
            <option value="price_asc">Precio: Menor a Mayor</option>
            <option value="price_desc">Precio: Mayor a Menor</option>
            <option value="name">Nombre</option>
          </select>
        </div>

        <div class="product-grid" id="productGrid"></div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .products-layout {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 32px;
  }

  .sidebar {
    background: var(--bg-primary);
    padding: 24px;
    border-radius: var(--radius);
    height: fit-content;
    position: sticky;
    top: 100px;
  }

  .sidebar h3 {
    margin-bottom: 16px;
  }

  .products-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .sort-select {
    padding: 12px 16px;
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    background: var(--bg-primary);
    cursor: pointer;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 24px;
  }

  .category-filter {
    display: block;
    padding: 12px;
    margin-bottom: 8px;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: background 0.2s;
  }

  .category-filter:hover {
    background: var(--bg-secondary);
  }

  .category-filter.active {
    background: var(--primary);
    color: white;
  }
</style>

<script>
  let allProducts = [];

  async function loadProducts() {
    try {
      console.log('Cargando productos...');
      const urlParams = new URLSearchParams(window.location.search);
      const category = urlParams.get('category');
      const search = urlParams.get('search');

      // Cargar productos desde JSON local
      const response = await fetch('/products.json');
      
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      let data = await response.json();
      
      // Filtrar por categoría si existe
      if (category) {
        data = data.filter(p => p.category === category);
      }
      
      // Filtrar por búsqueda si existe
      if (search) {
        data = data.filter(p => p.name.toLowerCase().includes(search.toLowerCase()));
      }
      
      console.log('Productos cargados:', data);
      allProducts = data || [];
      displayProducts(allProducts);
    } catch (error) {
      console.error('Error cargando productos:', error);
      const grid = document.getElementById('productGrid');
      if (grid) {
        grid.innerHTML = '<p style="color: red;">Error al cargar productos. Revisa la consola.</p>';
      }
    }
  }

  async function loadCategories() {
    try {
      const response = await fetch('/products.json');
      if (!response.ok) throw new Error('Error loading categories');
      
      const data = await response.json();
      
      // Obtener categorías únicas
      const categories = [...new Set(data?.map(p => p.category).filter(Boolean))];
      
      const container = document.getElementById('categoryFilters');
      if (!container) return;

      container.innerHTML = categories.map((cat) => `
        <a href="/productos?category=${encodeURIComponent(cat)}" class="category-filter">${cat}</a>
      `).join('');
    } catch (error) {
      console.error('Error:', error);
    }
  }

  function displayProducts(products) {
    const grid = document.getElementById('productGrid');
    if (!grid) return;

    if (products.length === 0) {
      grid.innerHTML = '<p>No se encontraron productos</p>';
      return;
    }

    grid.innerHTML = products.map(product => `
      <a href="/producto/${product.id}" class="product-card" aria-label="Ver detalles de ${product.name}">
        <img src="${product.image_url}" alt="${product.name}" loading="lazy" width="300" height="300">
        <h3>${product.name}</h3>
        <p class="price">$${product.price.toFixed(2)}</p>

      </a>
    `).join('');

  }

  const sortSelect = document.getElementById('sortSelect');
  sortSelect?.addEventListener('change', () => {
    const sorted = [...allProducts];
    switch (sortSelect.value) {
      case 'price_asc':
        sorted.sort((a, b) => a.price - b.price);
        break;
      case 'price_desc':
        sorted.sort((a, b) => b.price - a.price);
        break;
      case 'name':
        sorted.sort((a, b) => a.name.localeCompare(b.name));
        break;
    }
    displayProducts(sorted);
  });

  // Esperar a que el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      loadProducts();
      loadCategories();
    });
  } else {
    loadProducts();
    loadCategories();
  }
</script>


<style is:global>
  .product-card {
    display: block;
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid var(--border);
    animation: scaleIn 0.5s ease-out both;
  }

  .product-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 16px 48px var(--shadow-lg);
    border-color: var(--primary);
  }

  .product-card img {
    width: 100%;
    height: 240px;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover img {
    transform: scale(1.1);
  }

  .product-card h3 {
    padding: 16px;
    font-size: 18px;
  }

  .product-card .price {
    padding: 0 16px;
    font-size: 24px;
    font-weight: 700;
    color: var(--primary);
  }


</style>
